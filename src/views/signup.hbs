<div class="container col-md-7">
    <div class="card">
        <div class="card-header bg-dark">
            <h3 class="card-title text-white">
                <i class="fas fa-user-plus"></i> SignUp
            </h3>
        </div>
        <div class="card-body">
            <form action="/users/signup" method="POST" class="needs-validation" novalidate>
                <div class="form-row">
                    <div class="form-group col-md-6">
                        <label for="" class="">Nombre:</label>
                        <input class="form-control" type="text" name="nombre" id="" placeholder="Nombre"
                            required>
                        <div class="valid-feedback">
                            Looks good!
                        </div>
                        <div class="invalid-feedback">
                            Please give a first name.
                        </div>
                    </div>
                    <div class="form-group col-md-6">
                        <label for="" class="">Apellido:</label>
                        <input class="form-control " type="text" name="apellido" id="" placeholder="Apellido" required>
                        <div class="valid-feedback">
                            Looks good!
                        </div>
                        <div class="invalid-feedback">
                            Please give a last name.
                        </div>
                    </div>
                </div>

                <div class="form-group">
                    <label for="username" class="">Username:</label>
                    <input class="form-control " type="text" name="username" id="" placeholder="Username" required>
                    <div class="valid-feedback">
                        Looks good!
                    </div>
                    <div class="invalid-feedback">
                        Please give a username.
                    </div>
                </div>
                <div class="form-group">
                    <label for="password" class="">Password:</label>
                    <input class="form-control " type="password" name="password" id="" placeholder="password" required>
                    <div class="valid-feedback">
                        Looks good!
                    </div>
                    <div class="invalid-feedback">
                        Please give a password.
                    </div>
                </div>
                <div class="form-group">
                    <button class="btn btn-success">
                        <i class="fas fa-upload"></i> SignIn
                    </button>
                </div>
            </form>
        </div>
    </div>
</div>